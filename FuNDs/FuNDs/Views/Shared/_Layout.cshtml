

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CONVERGENT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container ">
        <div class="header">
            <a href="/Home"> <img src="~/Content/Images/Convergent.png" alt="logo" class="size" height="60"></a>
            <div class="nav">
                <ul class="otis">
                    <li class="covergent">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="Contact">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="Contact">@Html.ActionLink("How it works", "HowItWorks", "Home")</li>
                    <li class="Contact">@Html.ActionLink("Start a Campaign", "Create", "Campaigns")</li>

                    <li class="partial">@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
        <div class="clear"></div>
        <div class=" body-content">
            @RenderBody()
        </div>
        <hr class="hr" />
        <footer>
            <span style=" margin-left:initial"><p>&copy; @DateTime.Now.Year - Team Origin </p></span>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>