@model FuNDs.Models.Campaign

@{
    ViewBag.Title = "Create";
}

<section class="container" id="campaign-create">

    @if (Request.IsAuthenticated)
    {

        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Campaign</h4>
                <hr />
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*Html.LabelFor(model => model.CampaignTitle, htmlAttributes: new { @class = "control-label col-md-3" })*@
                    <label for="CampaignTitle" class="control-label col-md-3">Campaign Title</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CampaignTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "eg: Social Club Establishment" } })
                        @Html.ValidationMessageFor(model => model.CampaignTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="CampaignDescription" class="control-label col-md-3">Campaign Description</label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.CampaignDescription, new { @class = "form-control", @placeholder = "Write description here...", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.CampaignDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="CampaignAmount" class="control-label col-md-3">Target Amount</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CampaignAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "eg: 1000" } })
                        @Html.ValidationMessageFor(model => model.CampaignAmount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="StartingDate" class="control-label col-md-3">Campaign Date</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.StartingDate, new { htmlAttributes = new { @class = "form-control" , @placeholder = "eg: 10//11/1995" } })
                        @Html.ValidationMessageFor(model => model.StartingDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="EndingDate" class="control-label col-md-3">Ending Date</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.EndingDate, new { htmlAttributes = new { @class = "form-control" , @placeholder = "eg: 10/11/1995" } })
                        @Html.ValidationMessageFor(model => model.EndingDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                        @Html.LabelFor(model => model.FundRaisersId, "FundRaisersId", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("FundRaisersId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FundRaisersId, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }

    else
    {

        @Html.ActionLink("You are just a step ahead. Sign up first", "Create", "FundRaisers")

    }

</section>
